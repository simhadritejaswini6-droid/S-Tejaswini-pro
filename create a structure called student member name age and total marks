#include <stdio.h>

struct student {
    char name[50];
    int age;
    float total_marks;
};

int main() {
    struct student s[2];
    int i;
    float avg;

    // Input details
    for(i = 0; i < 2; i++) {
        printf("\nEnter details of student %d:\n", i+1);

        printf("Enter name: ");
        scanf("%s", s[i].name);

        printf("Enter age: ");
        scanf("%d", &s[i].age);

        printf("Enter total marks: ");
        scanf("%f", &s[i].total_marks);
    }

    // Display details
    printf("\n--- Student Information ---\n");
    for(i = 0; i < 2; i++) {
        printf("\nStudent %d:\n", i+1);
        printf("Name: %s\n", s[i].name);
        printf("Age: %d\n", s[i].age);
        printf("Total Marks: %.2f\n", s[i].total_marks);
    }

    // Average of total marks
    avg = (s[0].total_marks + s[1].total_marks) / 2;

    printf("\nAverage Total Marks = %.2f\n", avg);
    return 0;
}



