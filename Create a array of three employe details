#include <stdio.h>
typedef struct {
    int emp_id;
    char name[50];
    float salary;
} Employee;
int main() {
    Employee emp[3];
    int i, maxIndex = 0;

    for (i = 0; i < 3; i++) {
        printf("\nEnter details of Employee %d\n", i + 1);
        printf("Employee ID: ");
        scanf("%d", &emp[i].emp_id);
        getchar();
        printf("Name: ");
        scanf("%[^\n]", emp[i].name);
        getchar();
        printf("Salary: ");
        scanf("%f", &emp[i].salary);
    }

    // Find employee with highest salary
    for (i = 1; i < 3; i++) {
        if (emp[i].salary > emp[maxIndex].salary) {
            maxIndex = i;
        }
    }

    // Print employee with highest salary
    printf("\n--- Employee With Highest Salary ---\n");
    printf("Employee ID : %d\n", emp[maxIndex].emp_id);
    printf("Name        : %s\n", emp[maxIndex].name);
    printf("Salary      : %.2f\n", emp[maxIndex].salary);
    return 0;
}
